---
interface Service {
  titlePrimary: string;
  titleAccent: string;
  description: string;
  image: string;
  alt: string;
  features: string[];
}

interface Props {
  tagline?: string;
  services: Service[];
}

const { tagline = "Our Specialization", services } = Astro.props;
---

<section class="py-16 sm:py-20 lg:py-24 bg-gray-50">
  <div class="max-w-7xl mx-auto px-6">
    
    <div class="mb-12 md:mb-16 reveal">
      <h2 class="text-sm font-semibold tracking-[0.2em] text-brand-green uppercase mb-3">
        {tagline}
      </h2>
      <div class="h-1 w-12 bg-brand-green"></div>
    </div>

    <div class="grid grid-cols-1 md:grid-cols-2 gap-8 lg:gap-12">
      {services.map((service, index) => (
        <div class="group flex flex-col bg-white rounded-3xl overflow-hidden shadow-sm border border-gray-100 transition-all duration-500 hover:shadow-2xl reveal">
          
          <div class="relative h-64 sm:h-80 overflow-hidden">
            <div class="absolute -inset-2 bg-brand-green/20 blur-xl opacity-0 group-hover:opacity-100 transition duration-700 z-10"></div>
            
            <img
              src={service.image}
              alt={service.alt}
              class="relative w-full h-full object-cover transition-transform duration-700 group-hover:scale-110"
              loading="lazy"
            />
            
            <span class="absolute top-6 left-6 bg-brand-navy text-white w-10 h-10 rounded-lg flex items-center justify-center font-bold text-sm z-20 border border-white/10">
              0{index + 1}
            </span>
          </div>

          <div class="p-8 sm:p-10 flex flex-col flex-grow">
            <h2 class="text-2xl sm:text-3xl font-extrabold text-brand-navy mb-4 uppercase tracking-tight leading-tight">
              {service.titlePrimary} <br />
              <span class="text-brand-green">{service.titleAccent}</span>
            </h2>
            
            <p class="text-slate-600 leading-relaxed mb-8 text-sm sm:text-base flex-grow">
              {service.description}
            </p>
            
            <div class="space-y-3 pt-6 border-t border-gray-50">
              {service.features.map((feature) => (
                <div class="flex items-center gap-4 text-[10px] sm:text-[11px] font-bold tracking-widest text-brand-navy/70 uppercase">
                  <span class="h-px w-4 bg-brand-green"></span>
                  <span>{feature}</span>
                </div>
              ))}
            </div>
          </div>

        </div>
      ))}
    </div>

  </div>
</section>