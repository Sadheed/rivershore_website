---
import { Image } from "astro:assets";

interface Feature {
  title: string;
  description: string;
  image: ImageMetadata;
  link: string;
  linkText?: string;
}

interface Props {
  tagline: string;
  heading: string;
  sectionBg: ImageMetadata;
  features: Feature[];
  columns?: string; // e.g., "md:grid-cols-2" or "md:grid-cols-3"
}

const { tagline, heading, sectionBg, features, columns = "md:grid-cols-2" } = Astro.props;
---

<section class="bg-gray-200">
  <div class="relative py-20 sm:py-28 overflow-hidden bg-brand-navy my-8 rounded-3xl mx-4 sm:mx-6">
    
    <div class="absolute inset-0 z-0 pointer-events-none">
      <Image 
        src={sectionBg} 
        alt="" 
        class="w-full h-full object-cover opacity-20 grayscale"
      />
      <div class="absolute inset-0 bg-gradient-to-b from-brand-navy via-brand-navy/95 to-brand-navy"></div>
    </div>

    <div class="relative z-10 max-w-7xl mx-auto px-6">
      <div class="text-center mb-16 sm:mb-24 reveal">
        <p class="text-brand-green uppercase tracking-[0.3em] text-xs font-bold mb-4">
          {tagline}
        </p>
        <h2 class="text-3xl sm:text-4xl font-bold text-white mb-6 uppercase tracking-tight">
          {heading}
        </h2>
        <div class="h-1 w-20 bg-brand-green mx-auto"></div>
      </div>

      <div class={`grid grid-cols-1 ${columns} gap-8 lg:gap-10`}>
        {features.map((item) => (
          <div class="group flex flex-col bg-white/[0.03] backdrop-blur-md rounded-2xl border border-white/10 overflow-hidden transition-all duration-500 hover:border-brand-green/50 hover:bg-white/[0.06] reveal">
            
            <div class="h-48 sm:h-56 overflow-hidden relative">
              <Image 
                src={item.image} 
                alt={item.title} 
                class="w-full h-full object-cover transition-transform duration-700 group-hover:scale-110"
              />
              <div class="absolute inset-0 bg-brand-navy/30 group-hover:bg-transparent transition-colors duration-500"></div>
            </div>

            <div class="p-8 flex flex-col flex-grow">
              <h3 class="text-2xl font-bold text-white mb-4 uppercase tracking-tight">
                {item.title}
              </h3>
              <p class="text-gray-400 text-sm leading-relaxed mb-8 flex-grow">
                {item.description}
              </p>
              
              <a 
                href={item.link} 
                class="inline-flex items-center gap-2 text-brand-green font-bold text-xs uppercase tracking-widest hover:gap-4 transition-all"
              >
                {item.linkText || "Explore Details"} 
                <span class="text-lg">â†’</span>
              </a>
            </div>
          </div>
        ))}
      </div>
    </div>
  </div>
</section>