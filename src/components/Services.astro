  {
    title: "MEP Material Trading",
    description:
      "We bridge the gap between global manufacturers and local project requirements, sourcing high-grade Electrical, Plumbing, and HVAC components with precision.",
    icon: "M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4",
    image: "/servcard/Pipe-racking.webp",
    link: "/services/materials",
    linkdesc: "Explore Materials",
  },
  {
    title: "Building Maintenance",
    description:
      "From routine facility management to emergency civil repairs, our technical teams ensure your industrial assets operate safely and efficiently.",
    icon: "M11 4a2 2 0 114 0v1a1 1 0 001 1h3a1 1 0 011 1v3a1 1 0 01-1 1h-1a2 2 0 100 4h1a1 1 0 011 1v3a1 1 0 01-1 1h-3a1 1 0 01-1-1v-1a2 2 0 11-4 0v1a1 1 0 01-1 1H7a1 1 0 01-1-1v-3a1 1 0 00-1-1H4a2 2 0 110-4h1a1 1 0 001-1V7a1 1 0 011-1h3a1 1 0 011 1V4z",
    image: "/servcard/facilitycd.jpg",
    link: "/services/maintenance",
    linkdesc: "View Maintenance",
  },
  {
    title: "Scrap Trading",
    description:
      "We turn waste into value. Our scrap division handles the valuation, collection, and responsible recycling of ferrous and non-ferrous industrial metals.",
    image: "/servcard/scrapcd.webp",
    icon: "M4 4v5h.582m15.356 2A8.001 8.001 0 004.582 9m0 0H9m11 11v-5h-.581m0 0a8.003 8.003 0 01-15.357-2m15.357 2H15",
    link: "/services/trading",
    linkdesc: "Trading Operations",
  },
