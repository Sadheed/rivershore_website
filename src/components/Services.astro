<section id="services" class="py-24 bg-gray-50 overflow-hidden">
  <div class="max-w-7xl mx-auto px-6">
    <div class="text-center mb-20 reveal">
      <h2 class="text-4xl font-bold mb-4" style="color: var(--brand-navy);">Our Core Business Activities</h2>
