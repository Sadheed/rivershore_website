<section id="contact" class="py-20 bg-white">
  <div class="max-w-6xl mx-auto px-6">
    <div class="grid lg:grid-cols-2 gap-12 items-start">
      
      <div class="reveal">
        <h2 class="text-4xl font-bold text-brand-navy mb-6 tracking-tight uppercase">
          Get in <span class="text-brand-green">Touch</span>
        </h2>
        <p class="text-lg text-slate-600 mb-10 max-w-md">
          Have a specific requirement or a question about our services? Send us a message and we'll get back to you shortly.
        </p>
        
        <div class="space-y-6">
          <div class="flex items-center gap-4 group">
            <div class="w-11 h-11 bg-slate-100 text-brand-navy rounded-full flex items-center justify-center group-hover:bg-brand-green transition-colors">
              <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
              </svg>
            </div>
            <p class="text-brand-navy font-semibold">contact@rivershoretrading.com</p>
          </div>

          <div class="flex items-center gap-4 group">
            <div class="w-11 h-11 bg-slate-100 text-brand-navy rounded-full flex items-center justify-center group-hover:bg-brand-green transition-colors">
              <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z" />
              </svg>
            </div>
            <p class="text-brand-navy font-semibold">Industrial Area, St. 41, Doha, Qatar</p>
          </div>
        </div>
      </div>

      <div class="bg-slate-50 p-8 rounded-2xl border border-slate-100 reveal">
        <form action="#" class="space-y-5">
          <div>
            <label class="block text-sm font-bold text-brand-navy mb-2">Name</label>
            <input type="text" name="name" required placeholder="Your Name" class="w-full px-4 py-3 rounded-lg border border-slate-200 focus:border-brand-green focus:outline-none transition-all bg-white" />
          </div>
          
          <div>
            <label class="block text-sm font-bold text-brand-navy mb-2">Email Address</label>
            <input type="email" name="email" required placeholder="email@address.com" class="w-full px-4 py-3 rounded-lg border border-slate-200 focus:border-brand-green focus:outline-none transition-all bg-white" />
          </div>

          <div>
            <label class="block text-sm font-bold text-brand-navy mb-2">Message</label>
            <textarea name="message" required rows="5" placeholder="Tell us what you need..." class="w-full px-4 py-3 rounded-lg border border-slate-200 focus:border-brand-green focus:outline-none transition-all bg-white resize-none"></textarea>
          </div>

          <button type="submit" class="w-full bg-brand-navy text-white font-bold py-4 rounded-lg hover:bg-brand-green hover:text-brand-navy transition-all duration-300 uppercase tracking-widest text-xs shadow-md">
            Send Inquiry
          </button>
        </form>
      </div>

    </div>
  </div>
</section>