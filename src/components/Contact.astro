---
// src/components/BrandLogos.astro

// Define your brands here. 
// "alt" is the brand name, "src" is the path to the image in your public folder.
const brands = [
  { name: "Schneider Electric", src: "/brands/snider.png" },
  { name: "ABB", src: "/brands/abb.png" },
  { name: "Elmarc", src: "/brands/elmarc.png" },
  { name: "philips", src: "/brands/philips.png" },
  { name: "espa", src: "/brands/ESPA_logo.png" },
  { name: "Wednesbury", src: "/brands/Wednesbury.png" },
  // Add more as needed
];
---

<section class="py-16 md:py-24 bg-slate-50 border-t border-slate-200">
  <div class="max-w-7xl mx-auto px-6">
    
    <div class="text-center mb-12 md:mb-16 reveal">
      <span class="text-brand-green font-bold uppercase tracking-[0.2em] text-xs block mb-3">
        Sourcing Excellence
      </span>
      <h2 class="text-2xl md:text-4xl font-black text-brand-navy">
        Brands We Source & Trade
      </h2>
      <p class="text-slate-500 mt-4 max-w-2xl mx-auto">
        We maintain a robust network with global manufacturers to ensure your projects meet the highest standards of quality and compliance.
      </p>
    </div>

    <div class="grid grid-cols-2 md:grid-cols-3 lg:grid-cols-6 gap-8 md:gap-12 items-center justify-items-center">
      
      {brands.map((brand) => (
        <div class="group relative flex items-center justify-center w-full h-24 p-4 grayscale opacity-60 hover:grayscale-0 hover:opacity-100 transition-all duration-500 hover:scale-110 cursor-pointer">
          <img 
            src={brand.src.includes('brands/') ? brand.src : `https://placehold.co/200x100/e2e8f0/1e293b?text=${brand.name}`}
            alt={`${brand.name} Logo`}
            class="max-w-full max-h-12 md:max-h-14 object-contain mix-blend-multiply filter"
            loading="lazy"
          />
        </div>
      ))}

    </div>
    
    <div class="mt-16 text-center border-t border-slate-200 pt-8 reveal">
      <p class="text-sm text-slate-400 font-medium">
        Don't see a specific brand? 
        <a href="/contact" class="text-brand-navy font-bold underline decoration-brand-green decoration-2 underline-offset-4 hover:text-brand-green transition-colors">
          Contact our procurement team
        </a> 
        for custom sourcing.
      </p>
    </div>

  </div>
</section>