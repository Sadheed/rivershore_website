---
import Layout from "../layouts/Layout.astro";
import GlassGridSection from '../components/GlassGridSection.astro';
import sectionBg from '../assets/wholebg.jpg';
import materialImg from "../assets/materialsupp1.jpg";
import maintainImg from "../assets/maintain1.jpg";
import scrapImg from "../assets/Scrapcollection.png";

const services = [
  {
    title: "Building Supply",
    description: "Sourcing high-performance materials for large-scale infrastructure and industrial development.",
    image: materialImg, // Use the variable
    link: "/services/materials",
    linkText: "Explore",
    alt: "Building Supply"
  },
  {
    title: "Facility Maintenance",
    description: "24/7 technical support and preventive care designed to maximize your industrial asset lifespan.",
    image: maintainImg, // Use the variable
    link: "/services/maintenance",
    linkText: "Explore",
    alt: "Facility Maintenance"
  },
  {
    title: "Scrap Trading",
    description: "Sustainable metal recycling and industrial waste management with global trading reach.",
    image: scrapImg, // Use the variable
    link: "/services/trading",
    linkText: "Explore",
    alt: "Scrap Trading"
  }
];

---

<Layout title="Our Services | Rivershore Trading">
  
  <section
    class="pt-48 pb-20 bg-brand-navy text-white overflow-hidden relative"
  >
    <div class="max-w-7xl mx-auto px-6 relative z-10">
      <p
        class="text-brand-green uppercase tracking-[0.3em] text-xs font-bold mb-4 reveal"
      >
        Our Services
      </p>
      <h1 class="text-3xl md:text-5xl font-bold mb-6 reveal">
        Supplying, supporting, and sustaining  <br />
        <span class="text-white/50">modern industrial operations</span>
      </h1>
    </div>
    <div
      class="absolute top-0 right-0 w-1/2 h-full bg-brand-green/5 skew-x-12 transform translate-x-1/4"
    >
    </div>
  </section>


<GlassGridSection 
  tagline="Core Business"
  heading="Professional Industrial Solutions"
  sectionBg={sectionBg}
  features={services}
  columns="md:grid-cols-3" 
/>



  
  </Layout
>
