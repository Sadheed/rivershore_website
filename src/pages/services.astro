---
import Layout from "../layouts/Layout.astro";
import { Image } from "astro:assets";

// Images
import materialImg from "../assets/industrial.jpg";
import maintainImg from "../assets/maintain1.jpg";
import scrapImg from "../assets/scrapbusiness.webp";

// Service Data with added details for the list view
const services = [
  {
    id: "01",
    title: "MEP Material Trading",
    subtitle: "Sourcing & Procurement",
    description: "We bridge the gap between global manufacturers and local project requirements. Our procurement team specializes in sourcing hard-to-find electrical and mechanical specifications with shorter lead times.",
    features: ["Electrical Components", "HVAC Systems & Ducting", "Plumbing & Sanitary", "Industrial Consumables"],
    image: materialImg,
    link: "/services/materials",
    color: "bg-brand-navy" // visual accent
  },
  {
    id: "02",
    title: "Facility Maintenance",
    subtitle: "Civil & Technical Services",
    description: "Beyond supply, we ensure your assets continue to perform. Our maintenance division offers comprehensive AMC (Annual Maintenance Contracts) and on-call repair services for industrial and commercial facilities.",
    features: ["Preventative Maintenance", "Civil Repairs & Works", "MEP Troubleshooting", "24/7 Emergency Support"],
    image: maintainImg,
    link: "/services/maintenance",
    color: "bg-brand-green"
  },
  {
    id: "03",
    title: "Scrap Trading",
    subtitle: "Recycling & Valorization",
    description: "We turn industrial waste into working capital. Our scrap division handles the collection, valuation, and trading of ferrous and non-ferrous metals with full transparency and fair market pricing.",
    features: ["Ferrous Metals (Iron/Steel)", "Non-Ferrous (Copper/Alum)", "Site Clearance", "Fair Market Valuation"],
    image: scrapImg,
    link: "/services/trading",
    color: "bg-brand-navy"
  }
];
---

<Layout title="Our Services | Rivershore Trading">
  
  <section class="pt-48 pb-20 bg-brand-navy text-white overflow-hidden relative">
    <div class="max-w-7xl mx-auto px-6 relative z-10">
      <div class="flex flex-col md:flex-row gap-12 items-end">
        <div class="w-full md:w-2/3">
          <p class="text-brand-green uppercase tracking-[0.3em] text-xs font-bold mb-4 reveal">
            What We Do
          </p>
          <h1 class="text-4xl md:text-6xl font-bold mb-6 reveal leading-tight">
            Integrated Industrial <br />
            <span class="text-white/50">Solutions</span>
          </h1>
        </div>
        <div class="w-full md:w-1/3 pb-2 reveal">
          <p class="text-gray-400 text-lg leading-relaxed border-l-2 border-brand-green pl-6">
            From the materials you install to the maintenance you require and the scrap you generateâ€”we manage the lifecycle.
          </p>
        </div>
      </div>
    </div>
    <div class="absolute top-0 right-0 w-2/3 h-full bg-gradient-to-l from-brand-green/10 to-transparent skew-x-12 transform translate-x-1/4 pointer-events-none"></div>
  </section>

  <div class="bg-gray-50 border-b border-gray-200">
    <div class="max-w-7xl mx-auto px-6 py-12">
      <div class="grid grid-cols-2 md:grid-cols-4 gap-8">
        <div class="text-center md:text-left reveal">
          <span class="block text-3xl font-bold text-brand-navy mb-1">3+</span>
          <span class="text-xs uppercase tracking-widest text-gray-500">Core Divisions</span>
        </div>
        <div class="text-center md:text-left reveal">
          <span class="block text-3xl font-bold text-brand-navy mb-1">100%</span>
          <span class="text-xs uppercase tracking-widest text-gray-500">Compliance</span>
        </div>
        <div class="text-center md:text-left reveal">
          <span class="block text-3xl font-bold text-brand-navy mb-1">24/7</span>
          <span class="text-xs uppercase tracking-widest text-gray-500">Support Ready</span>
        </div>
        <div class="text-center md:text-left reveal">
          <span class="block text-3xl font-bold text-brand-navy mb-1">Qatar</span>
          <span class="text-xs uppercase tracking-widest text-gray-500">Nationwide Cover</span>
        </div>
      </div>
    </div>
  </div>

  <section class="bg-white">
    {services.map((service, index) => (
      <div class={`group relative py-20 lg:py-28 border-b border-gray-100 overflow-hidden ${index % 2 === 1 ? 'bg-gray-50' : 'bg-white'}`}>
        <div class="max-w-7xl mx-auto px-6">
          <div class={`flex flex-col lg:flex-row items-center gap-12 lg:gap-20 ${index % 2 === 1 ? 'lg:flex-row-reverse' : ''}`}>
            
            <div class="w-full lg:w-1/2 reveal">
              <div class="flex items-center gap-4 mb-6">
                <span class="text-6xl font-black text-gray-100 select-none -ml-4">{service.id}</span>
                <span class="px-3 py-1 bg-brand-navy/5 text-brand-navy text-[10px] font-bold uppercase tracking-widest rounded-full">
                  {service.subtitle}
                </span>
              </div>
              
              <h2 class="text-3xl md:text-4xl font-bold text-brand-navy mb-6">
                {service.title}
              </h2>
              
              <p class="text-gray-500 text-lg leading-relaxed mb-8">
                {service.description}
              </p>

              <ul class="grid grid-cols-1 sm:grid-cols-2 gap-3 mb-10">
                {service.features.map(item => (
                  <li class="flex items-center gap-3 text-brand-navy font-medium text-sm">
                    <div class={`w-1.5 h-1.5 rounded-full ${service.color}`}></div>
                    {item}
                  </li>
                ))}
              </ul>

              <a 
                href={service.link} 
                class="inline-flex items-center gap-2 text-brand-navy font-bold text-sm uppercase tracking-widest group-hover:text-brand-green transition-colors duration-300"
              >
                Explore Capability
                <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 transform group-hover:translate-x-2 transition-transform duration-300" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3" />
                </svg>
              </a>
            </div>

            <div class="w-full lg:w-1/2 reveal">
              <div class="relative h-[300px] md:h-[450px] w-full rounded-2xl overflow-hidden shadow-2xl group-hover:shadow-3xl transition-all duration-500">
                <div class="absolute inset-0 bg-brand-navy/20 group-hover:bg-transparent transition-colors duration-500 z-10"></div>
                <Image 
                  src={service.image} 
                  alt={service.title} 
                  class="w-full h-full object-cover transform group-hover:scale-110 transition-transform duration-700" 
                />
              </div>
            </div>

          </div>
        </div>
      </div>
    ))}
  </section>

  <section class="py-24 bg-brand-navy relative overflow-hidden">
    <div class="absolute inset-0 bg-brand-green/10 pattern-dots"></div> <div class="max-w-4xl mx-auto px-6 text-center relative z-10">
      <h2 class="text-3xl md:text-5xl font-bold text-white mb-6">
        Need a Technical Quote?
      </h2>
      <p class="text-gray-400 text-lg mb-10 max-w-2xl mx-auto">
        Whether it's a bulk material order or a maintenance contract inquiry, our team provides detailed proposals within 24 hours.
      </p>
      <div class="flex flex-col sm:flex-row gap-4 justify-center">
        <a href="/contact" class="px-8 py-4 bg-brand-green text-brand-navy font-bold rounded-lg hover:bg-white transition-colors uppercase tracking-widest text-sm">
          Contact Us
        </a>
        <a href="tel:+97400000000" class="px-8 py-4 border border-white/20 text-white font-bold rounded-lg hover:bg-white/10 transition-colors uppercase tracking-widest text-sm">
          Call Support
        </a>
      </div>
    </div>
  </section>

</Layout>