---
import Layout from '../layouts/Layout.astro';
---

<Layout title="Contact Us | Rivershore Trading">
  <section class="pt-48 pb-12 bg-gray-50">
    <div class="max-w-7xl mx-auto px-6">
      <h1 class="text-4xl md:text-6xl font-black text-brand-navy reveal">Get in <span class="text-brand-green">Touch</span></h1>
      <p class="mt-4 text-gray-500 max-w-xl reveal">Have a project in mind? Our industrial experts are ready to provide you with a customized quote and consultation.</p>
    </div>
  </section>

  <section class="py-20 bg-white">
    <div class="max-w-7xl mx-auto px-6 grid lg:grid-cols-2 gap-16">
      
      <div class="reveal">
        <form class="space-y-6">
          <div class="grid md:grid-cols-2 gap-6">
            <div>
              <label class="block text-xs font-bold uppercase tracking-widest text-brand-navy mb-2">Full Name</label>
              <input type="text" class="w-full bg-gray-50 border border-gray-100 rounded-lg px-4 py-3 focus:outline-none focus:border-brand-green transition-colors" placeholder="John Doe" />
            </div>
            <div>
              <label class="block text-xs font-bold uppercase tracking-widest text-brand-navy mb-2">Email Address</label>
              <input type="email" class="w-full bg-gray-50 border border-gray-100 rounded-lg px-4 py-3 focus:outline-none focus:border-brand-green transition-colors" placeholder="john@company.com" />
            </div>
          </div>
          <div>
            <label class="block text-xs font-bold uppercase tracking-widest text-brand-navy mb-2">Service Required</label>
            <select class="w-full bg-gray-50 border border-gray-100 rounded-lg px-4 py-3 focus:outline-none focus:border-brand-green transition-colors">
              <option>Building Supply</option>
              <option>Facility Maintenance</option>
              <option>Scrap Trading</option>
              <option>General Inquiry</option>
            </select>
          </div>
          <div>
            <label class="block text-xs font-bold uppercase tracking-widest text-brand-navy mb-2">Message</label>
            <textarea rows="5" class="w-full bg-gray-50 border border-gray-100 rounded-lg px-4 py-3 focus:outline-none focus:border-brand-green transition-colors" placeholder="Tell us about your project..."></textarea>
          </div>
          <button class="w-full bg-brand-navy text-white font-bold py-4 rounded-lg hover:bg-brand-navy/90 transition-all shadow-lg hover:shadow-brand-navy/20">
            Send Message
          </button>
        </form>
      </div>

      <div class="space-y-12 reveal" style="transition-delay: 200ms;">
        <div>
          <h3 class="text-xl font-bold text-brand-navy mb-4">Headquarters</h3>
          <p class="text-gray-600 leading-relaxed mb-6">
            Rivershore Business Center, Industrial Area Phase II<br/>
            Near Major Logistics Hub, City, ZIP Code
          </p>
          
          <div class="space-y-4">
            <div class="flex items-center gap-4 text-brand-navy font-semibold">
              <span class="w-10 h-10 bg-brand-green/10 rounded-full flex items-center justify-center text-brand-green">ðŸ“ž</span>
              +1 (234) 567-890
            </div>
            <div class="flex items-center gap-4 text-brand-navy font-semibold">
              <span class="w-10 h-10 bg-brand-green/10 rounded-full flex items-center justify-center text-brand-green">ðŸ“§</span>
              hello@rivershoretrading.com
            </div>
          </div>
        </div>

        <div class="w-full h-80 bg-gray-100 rounded-2xl overflow-hidden grayscale hover:grayscale-0 transition-all duration-700 shadow-inner">
           <div class="w-full h-full flex items-center justify-center text-gray-400 font-bold uppercase tracking-widest text-xs italic">
             Interactive Map Loading...
           </div>
        </div>
      </div>

    </div>
  </section>
</Layout>